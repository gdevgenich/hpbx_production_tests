<?xml version="1.0" encoding="utf-8" ?>

<pbxut version="4.0">

  <name>next_gen_tests</name>
  <version>1.20-SNAPSHOT</version>

  <!-- Plugins -->
  <plugins>

    <!-- Service version plugin -->
    <plugin id="VersionPlugin" class="pbxut_util.plugin.version.VersionPlugin">
    </plugin>

        <!-- Service verbose plugin -->
    <plugin id="VerboseReporterPlugin" class="pbxut_util.plugin.reporter.verbose.VerboseReporterPlugin">
    </plugin>

    <!-- Service case counter plugin -->
    <plugin id="SummaryCaseReporterPlugin" class="pbxut_util.plugin.statistic.summary_case.SummaryCaseReporterPlugin">
    </plugin>

    <!-- Service alert message counter -->
    <plugin id="AlertCaseReporterPlugin" class="pbxut_util.plugin.reporter.alert_case.AlertCaseReporterPlugin">
    </plugin>

        <!-- Reporter: Logging -->
    <plugin id="LogPlugin" class="pbxut_util.plugin.log.LogPlugin">
    </plugin>

    <plugin id="SimpleFilterPlugin" class="pbxut_util.plugin.filter.simple.SimpleFilterPlugin">
        <param name="filename" value="plan.txt" />
    </plugin>

    <!-- Context reader plugin -->
    <plugin id="ContextReaderPlugun" class="pbxut_util.plugin.context.ContextReaderPlugin">
      <param name="is_debug" value="Yes"/>
      <param name="test_profile" value="hpbx2"/>
    </plugin>

    <!-- Color text reporter plugin -->
    <plugin id="ClassicReporterPlugin" class="pbxut_util.plugin.reporter.classic.ClassicReporterPlugin">
        <param name="type" value="xterm" />
    </plugin>

  </plugins>

</pbxut>
